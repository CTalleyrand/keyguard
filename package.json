{
  "name": "keyguard-next",
  "version": "0.0.1",
  "description": "Secure storage for Nimiq private keys.",
  "scripts": {
    "test": "karma start",
    "typecheck": "tsc",
    "lint": "eslint src client tools",
    "lintfix": "eslint --fix src client tools",
    "checkdeps": "node tools/dependencyValidator.js",
    "coverage": "nyc npm run test",
    "pr": "npm run typecheck && npm run lint && npm run test && npm run checkdeps",
    "watch": "tsc-watch --pretty --onSuccess \"npm run watchonsuccess\"",
    "watchonsuccess": "npm run lintfix && npm run checkdeps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nimiq/keyguard-next.git"
  },
  "keywords": [
    "Nimiq",
    "Keyguard"
  ],
  "author": "Nimiq",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nimiq/keyguard-next/issues"
  },
  "homepage": "https://github.com/nimiq/keyguard-next#readme",
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.5.2",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-require-jsdoc-except": "^1.1.0",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^1.1.2",
    "nyc": "^12.0.2",
    "tsc-watch": "^1.0.22",
    "typescript": "^2.9.2"
  }
}
